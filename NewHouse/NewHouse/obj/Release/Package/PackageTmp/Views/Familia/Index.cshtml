@model IEnumerable<NewHouse.Models.Familia>

@{
    ViewBag.Title = "Index";
}

<div class="w3-container w3-teal">
    <h1>Cadastro - Programa NewHouse</h1>
</div>

<p>
    @Html.ActionLink("Cadastrar nova família", "Create", "Familia", new object { }, new { @class = "btn btn-default" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo):
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Cep):
        </th>
    </tr>

    @if (Model.ToList().Count == 0 || Model == null)
    {
        <tr>
            <td colspan="10">Nenhum registro encontrado.</td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Cep)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
